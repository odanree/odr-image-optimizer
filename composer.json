{
	"name": "odanree/image-optimizer",
	"description": "Professional WordPress image optimization plugin with compression, lazy loading, and WebP conversion",
	"type": "wordpress-plugin",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Danh Le",
			"email": "hello@danhle.net",
			"homepage": "https://danhle.net"
		}
	],
	"require": {
		"php": ">=8.2"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.0",
		"phpstan/phpstan": "^1.10",
		"php-cs-fixer/php-cs-fixer": "^3.50",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"wp-coding-standards/wpcs": "^3.0",
		"squizlabs/php_codesniffer": "^4.0"
	},
	"scripts": {
		"test": "vendor/bin/phpunit --colors=always",
		"analyze": "vendor/bin/phpstan analyse includes --level=max",
		"format": "vendor/bin/php-cs-fixer fix includes",
		"check": [
			"@format",
			"@analyze",
			"@test"
		],
		"phpcs": "phpcs --standard=WordPress image-optimizer.php includes/ --colors",
		"phpcbf": "phpcbf --standard=WordPress image-optimizer.php includes/"
	},
	"keywords": [
		"wordpress",
		"plugin",
		"image",
		"optimization",
		"compression",
		"webp",
		"lazy-loading",
		"performance"
	],
	"homepage": "https://github.com/odanree/image-optimizer",
	"support": {
		"issues": "https://github.com/odanree/image-optimizer/issues",
		"source": "https://github.com/odanree/image-optimizer"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
